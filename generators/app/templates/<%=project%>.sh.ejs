export root=$(cd $(dirname ${BASH_SOURCE[0]:-$0}) && pwd)
export file="${BASH_SOURCE##*/}"

function <%=project%>() {

  echo
  echo "Environment: $env"
  echo "Directory: $root"

  command=$1
  args=${@:2}
  env=${ENV:-dev}

  case $command in
    "build")
    find $root -name build.sh | xargs -I % sh -c 'cd $(dirname %) && ./build.sh'
    ;;

    "validate")
    terraform -chdir=$root/terraform validate $args
    ;;

    "fmt")
    terraform -chdir=$root/terraform fmt $args
    ;;

    "init")
    terraform -chdir=$root/terraform workspace select $env || terraform workspace new $env
    terraform -chdir=$root/terraform init $args
    ;;

    "plan")
    terraform -chdir=$root/terraform workspace select $env || terraform workspace new $env
    terraform -chdir=$root/terraform init
    terraform -chdir=$root/terraform plan -var-file=./etc/dev.tfvars -out=./tfplan $args
    ;;

    "apply")
    terraform -chdir=$root/terraform workspace select $env || terraform workspace new $env
    terraform -chdir=$root/terraform init
    terraform -chdir=$root/terraform apply $args ./tfplan
    ;;

    "destroy")
    terraform -chdir=$root/terraform workspace select $env || terraform workspace new $env
    terraform -chdir=$root/terraform init
    terraform -chdir=$root/terraform destroy -var-file=./etc/dev.tfvars $args
    if [ $env != "default" ]; then
      terraform -chdir=$root/terraform workspace select default
      terraform -chdir=$root/terraform workspace delete $env
    fi
    ;;

    *)
    echo
    echo "<%=project%> <command> [options]"
    echo
    echo "This helper script calls terraform, enforcing some conventions:"
    echo "  1. work from root directory"
    echo "  2. include workspaces"
    echo "  3. force plan files"
    echo
    echo "commands:"
    echo "  help      - this help screen"
    echo "  build     - calls all the build.sh scripts"
    echo "  validate  - calls 'terraform validate'"
    echo "  fmt       - calls 'terraform fmt'"
    echo "  init      - calls 'terraform init'"
    echo "  plan      - calls 'terraform plan'"
    echo "  apply     - calls 'terraform apply'"
    echo "  destroy   - calls 'terraform destroy'"
    echo
    echo "environment variables:"
    echo "  ENV       - terraform workspace (default: 'dev')"
    echo
    ;;
  esac
}

echo "Usage: <%=project%>"
