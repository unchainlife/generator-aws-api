function _make_help() {
    echo
    echo "<%=project%> make <command> [options]"
    echo
    echo "commands:"
    echo "  help          - this help screen"
    echo "  build         - runs 'terraform validate'"
}

function _make_build() {
    find $root -name make.sh | xargs -I % sh -c 'cd $(dirname %) && ./make.sh build'
}

function _make() {
    command=$1
    args=(${@:2})

    case $command in
        "build") _make_build $args ;;
        *) _make_help $args ;;
    esac
}