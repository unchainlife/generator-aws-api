function _code_help() {
    echo
    echo "<%=project%> code <command> [options]"
    echo
    echo "commands:"
    echo "  help          - this help screen"
    echo "  build         - runs 'terraform validate'"
}

function _code_build() {
    find $root -name build.sh | xargs -I % sh -c 'cd $(dirname %) && ./build.sh'
}

function _code() {
    command=$1
    args=(${@:2})

    case $command in
        "build") _code_build $args ;;
        *) _code_help $args ;;
    esac
}